{
  "name": "barbershop-dna",
  "version": "1.0.0",
  "type": "module",
  "description": "Digital Barbershop Marketplace - Two-Sided Platform for Indonesia",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=barbershop-dna-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name barbershop-dna",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:create": "wrangler d1 create barbershop-dna-production",
    "db:migrate:local": "wrangler d1 migrations apply barbershop-dna-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply barbershop-dna-production",
    "db:console:local": "wrangler d1 execute barbershop-dna-production --local",
    "db:console:prod": "wrangler d1 execute barbershop-dna-production",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "hono": "^4.11.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  },
  "keywords": [
    "barbershop",
    "marketplace",
    "saas",
    "cloudflare",
    "hono",
    "booking",
    "indonesia"
  ],
  "author": "Barbershop DNA Team",
  "license": "MIT"
}